<?xml version="1.0" encoding="UTF-8"?>
<model name="mljh:manuLifeContentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <description>ManuLife Custom Content Model</description>
    <author>Vijay Velu</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco System Model Definitions -->
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
    </imports>

    <!-- Custom namespace for Manulife-JH  -->
    <namespaces>
        <namespace uri="http://www.manulife.org/model/content/1.0" prefix="mljh"/>
    </namespaces>

    <constraints>
        
    </constraints>

    <!-- ===============================================================================================================
        Constraints, Types, and Aspects go here...
        -->

    <types>
        <!--
            Manulife Custom Document Types
        -->
        <!-- ManuLife- Policy Document Type -->
        <type name="mljh:policyType">
            <title>Policy Document Type</title>
            <parent>cm:content</parent>
            <properties>
                <property name="mljh:policyNumber">
                    <title>Policy Number</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>true</facetable>
                    </index>
                </property>
                <property name="mljh:insuredFirstName">
                    <title>Insured First Name</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>true</facetable>
                    </index>
                </property>
                <property name="mljh:insuredLastName">
                    <title>Insured Last Name</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>true</facetable>
                    </index>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>mljh:docExternalLinks</aspect>
            </mandatory-aspects>
        </type>
    </types>

    <aspects>
        <!-- A document can have security classification applied and
             faceted search is specifically enabled for best performance and we change
             default index config to not tokenize the value. -->
        <aspect name="mljh:docExternalLinks">
            <title>ManuLife- External Links Aspect</title>
            <description>ManuLife- External Links Aspect</description>
            <properties>
                <property name="mljh:agentLink">
                	<title>Agent Link</title>
                    <type>d:text</type>
                    <index enabled="false">
                        <tokenised>FALSE</tokenised>
                        <facetable>false</facetable>
                    </index>
                </property>
                <property name="mljh:customerLink">
                	<title>Customer Link</title>
                    <type>d:text</type>
                    <index enabled="false">
                        <tokenised>FALSE</tokenised>
                        <facetable>false</facetable>
                    </index>
                </property>
            </properties>
        </aspect>
        <aspect name="mljh:agentViewed">
            <title>ManuLife- Agent Viewed Aspect</title>
            <description>ManuLife- Agent Viewed Aspect</description>
            <properties>
                <property name="mljh:hasAgentViewed">
                	<title>Has Agent Viewed</title>
                    <type>d:boolean</type>
                    <default>false</default>
                   	<index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>true</facetable>
                    </index>
                </property>
            </properties>
        </aspect>
        <aspect name="mljh:customerViewed">
            <title>ManuLife- Customer Viewed Aspect</title>
            <description>ManuLife- Customer Viewed Aspect</description>
            <properties>
                <property name="mljh:hasCustomerViewed">
                	<title>Has Customer Viewed</title>
                    <type>d:boolean</type>
                    <default>false</default>
                    <index enabled="true">
                        <tokenised>TRUE</tokenised>
                        <facetable>true</facetable>
                    </index>
                </property>
            </properties>
        </aspect>
    </aspects>

</model>